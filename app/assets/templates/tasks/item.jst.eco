<div id='task' class='row'>
  <% if @flag: %>
    <div class="span1">
      <input id='edit-task' size="10" autofocus='true' />
    </div>
  <% else: %>
    <div id='task-complete' class="span1"><%= @task.get 'complete' %></div>
    <div class="span3">
      <% if @task.get('complete'): %>
        <strike id='task-name' style="color: grey"><%= @task.get 'name' %></strike>
      <% else: %>
        <span id='task-name'><%= @task.get 'name' %></span>
      <% end %>
    </div>
    <div class="span1">
      <a class="remove-task">remove</a>
    </div>
  <% end %>
</div>

